<%= simple_form_for(item) do |f| %>
  <%= f.input :category, collection: Item::SPORT_TYPES %>
  <%= f.input :name %>
  <%= f.input :description %>
  <%= f.input :price_per_day %>
  <%= f.input :location %>
  <%= f.input :photos, as: :file, input_html: { multiple: true } %>
  <%= f.submit "Lend My Gear", :class => "btn btn-success" %>
  <%= link_to 'Cancel', root_path, class: 'btn btn-danger ml-2'%>
<% end %>



