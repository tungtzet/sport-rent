<div class="banner" id="banner-index" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url('https://source.unsplash.com/1600x900/?sport,extreme');">
  <h1>Your search results:</h1>

</div>

<div class="main-container" id="index-items">
  <div class="container" id="cards-container">
    <div class="cards">
    <% @items.each do |item| %>
      <div class="card">
        <%= cl_image_tag item.photos.first.key if item.photos.first %>
        <h4><%= item.name %></h4>
        <p><%= link_to "Rent for $#{item.price_per_day} a day", item_path(item) %></p>
      </div>
    <% end %>
    </div>
  </div>

  <div id="map"
     style="width: 100%; height: 100vh;"
     data-markers="<%= @markers.to_json %>"
     data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
  </div>
</div>
