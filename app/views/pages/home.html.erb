<!-- banner section -->

<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url('https://source.unsplash.com/1600x900/?sport,extreme');">
  <div class="container">
    <h1>Always wanted to try a new sport?</h1> <br>
    <p>Rent sport eqipment for short period from privates  and have fun without spending a fortune!</p>
    <%= link_to "Explore", items_path, class: "btn-primary" %>


    <%= form_tag items_path, method: :get do %>
      <div class="form-row">
        <div class="col">
          <%= text_field_tag :sport_type,  
            params[:sport_type],
            class: "form-control",	
            placeholder: "Find a gear"	
          %>
        </div>
        <div class="col">
          <%= date_field_tag :start_date,
            params[:start_date],
            class: "form-control",
            id: "start_date", 
            placeholder: "From"
          %>
        </div>
        <div class="col">
          <%= date_field_tag :end_date,
            params[:end_date],
            class: "form-control",
            id: "end_date", 
            placeholder: "To"
          %>
        </div>
        <div class="col-3">
          <%= text_field_tag :location,
            params[:location],
            class: "form-control",
            id: "location-search-home", 
            placeholder: "Where?"
          %>
        </div>
        <div class="col">
          <%= submit_tag "Go!", class: "btn-secondary" %>
        </div>
      </div>
    <% end %>

