<h1 style="text-align:center">My Items</h1>

<% if policy(@items).index? %>
<div class="main-container" id="index-items">
  <div class="container" id="cards-container">
    <div class="cards">
    <% @items.each do |item|%>
     <div class="card">
      <%= cl_image_tag item.photos.first.key if item.photos.first %>
      <h4><%= link_to item.name, item_path(item) %></h4>
       <p>
          <%= link_to "✏️", edit_item_path(item), class: "btn-primary" %>
          <%= link_to "🗑", user_item_path(item), data: { confirm: 'Are you sure?'}, method: :delete, remote: true, class: "btn-primary" %>
       </p>
      </div>
    <% end %>
  </div>
</div>
</div>
<% end %>






